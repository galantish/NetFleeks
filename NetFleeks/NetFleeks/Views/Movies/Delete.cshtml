@model NetFleeks.Models.Movies

@{
    ViewBag.Title = "Delete";
}

<h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight:bold;">Delete a Movie</h2>

<div class="control-label" col-md-2" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
    <br />
    <span class="label label-danger" style="font-size:18px;">Are you sure you want to delete this?</span>
</div>
<div>
    <hr />
    <dl class="dl-horizontal" style="text-align:left">
        <dt style="text-align:left; width:120px; margin-bottom:10px;">
            @Html.DisplayNameFor(model => model.genre.ID)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.genre.ID)
        </dd>

        <dt style="text-align:left; width:120px; margin-bottom:10px">
            @Html.DisplayNameFor(model => model.movieName)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.movieName)
        </dd>

        <dt style="text-align:left; width:120px; margin-bottom:10px">
            @Html.DisplayNameFor(model => model.dateAdded)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.dateAdded)
        </dd>

        <dt style="text-align:left; width:120px; margin-bottom:10px">
            @Html.DisplayNameFor(model => model.releaseDate)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.releaseDate)
        </dd>

        <dt style="text-align:left; width:120px; margin-bottom:10px">
            @Html.DisplayNameFor(model => model.actors)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.actors)
        </dd>

        <dt style="text-align:left; width:120px; margin-bottom:10px">
            @Html.DisplayNameFor(model => model.summary)
        </dt>

        <dd style="text-align:left; margin-left:auto">
            @Html.DisplayFor(model => model.summary)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" style="margin-left: 10em">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }

    <div style="margin-left:9.8em;">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
