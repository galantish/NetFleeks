@model IEnumerable<NetFleeks.Models.Movies>

@{
    ViewBag.Title = "Index";
}

<h1><b>Movies</b></h1>

<p>
    @Html.ActionLink("Create New Movie", "Create")
</p>

<style>
    #movieTable tr:nth-child(even){background-color:  #e6f3ff;}
    #movieTable tr:hover {background-color: #e6f3ff;}
    #movieTable th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #0069cc;
    color: white;
}

</style>


<table class="table" id="movieTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.genre.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.movieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.releaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.summary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.genre.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.movieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.releaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.summary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
