@model NetFleeks.Models.Rentals

@{
    ViewBag.Title = "Rent";
}

<h2>Rent</h2>

<p style="font-size:17px">
    @Html.ActionLink("Rent New Movie", "Rent")
</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
