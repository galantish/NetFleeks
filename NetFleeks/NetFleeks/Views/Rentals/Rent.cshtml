                @Html.EditorFor(model => model.rentalUser, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rentalUser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.rentalExpiration, htmlAttributes: new { @class = "control-label col-md-2" })
